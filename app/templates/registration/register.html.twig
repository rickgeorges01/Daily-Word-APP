{# templates/registration/register.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un nouveau compte</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('/node_modules/bootstrap/dist/css/bootstrap.css') }}">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>
<body>

<div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
    <div class="card p-4" style="max-width: 550px; width: 100%;">
        <div class="card-body">
            <div class="text-center mb-3">
                <img src="{{ asset('assets/images/logo1.png') }}" alt="Logo" class="mx-auto" style="max-width: 250px; height: auto;">
            </div>
            <h5 class="text-center mb-4"><strong>Créer un nouveau compte</strong></h5>
            
            {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="row mb-3">
                    <div class="col">
                        {{ form_row(registrationForm.firstname, {
                            'label': false,
                            'attr': {'class': 'form-control mb-3', 'placeholder': 'Prénom'}
                        }) }}
                    </div>
                    <div class="col">
                        {{ form_row(registrationForm.name, {
                            'label': false,
                            'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom'}
                        }) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email, {
                    'label': false,
                    'attr': {'class': 'form-control mb-3', 'placeholder': 'Adresse email'}
                }) }}
                {{ form_row(registrationForm.Tel, {
                    'label': false,
                    'attr': {'class': 'form-control mb-3', 'placeholder': 'Numéro de téléphone'}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    'label': false,
                    'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}
                }) }}
                <div class="mt-4">
                    <button type="submit" class="button-connect">Je m'inscris</button>
                </div>
                <div class="text-center my-3">
                    <span>OU</span>
                </div>
                <button type="button" class="button-other">Se connecter</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
